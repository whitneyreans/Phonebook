<h1> Add a number to <%= @contacts.name() %> </h1>

<form action="/numbers" method="post">
  <input id='contact_id' name='contact_id' type='hidden' value='<%= @contact.id() %>'>

  <label for='number'>Number:</label>
  <input id='number' name='number' type='text'>

  <label for='type'>Type:</label>
  <input id='type' name='type' type='text'>


  <button type="submit">Add Number</button>
</form>

 <h3>Here are all the numbers for this contact:</h3>

<ul>
  <% @contacts.numbers().each() do |number| %>
    <li><%= number.numbers() %></li>
  <% end %>
</ul>

